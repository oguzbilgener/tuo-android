<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/add_course_academic_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/academic_calendar_year"
        android:layout_marginLeft="@dimen/item_add_course_year_margin_left"
        android:layout_alignLeft="@id/add_course_academic_year"
        android:paddingLeft="@dimen/item_add_course_year_padding_left"
        android:layout_marginRight="@dimen/item_add_course_year_margin_right"
        android:layout_marginTop="@dimen/item_add_course_year_margin_top"
        android:textSize="@dimen/item_add_course_year_text_size"
        android:textColor="@color/add_course_academic_year_color"/>

    <LinearLayout
        android:id="@+id/add_course_academic_year_underline"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_add_course_year_bottom_line_height"
        android:layout_alignLeft="@id/add_course_academic_year"
        android:layout_alignRight="@id/add_course_academic_year"
        android:background="@color/add_course_academic_year_color"
        android:layout_below="@id/add_course_academic_year">
    </LinearLayout>

    <EditText
        android:id="@+id/add_course_course_code_edittext"
        style="@style/add_course_edittext"
        android:layout_width="@dimen/item_add_course_edittext_width2"
        android:layout_height="@dimen/item_add_course_edittext_height"
        android:layout_below="@id/add_course_academic_year_underline"
        android:layout_alignLeft="@id/add_course_academic_year_underline"
        android:layout_marginTop="@dimen/item_add_course_course_name_edittext_margin_top"
        android:hint="@string/add_course_course_code">
    </EditText>

    <EditText
        android:id="@+id/add_course_course_no_edittext"
        style="@style/add_course_edittext"
        android:layout_width="@dimen/item_add_course_edittext_width"
        android:layout_height="@dimen/item_add_course_edittext_height"
        android:layout_below="@id/add_course_academic_year_underline"
        android:layout_toRightOf="@id/add_course_course_code_edittext"
        android:layout_alignTop="@id/add_course_course_code_edittext"
        android:hint="@string/add_course_course_number">
    </EditText>

    <EditText
        android:id="@+id/add_course_section_no_edittext"
        style="@style/add_course_edittext"
        android:layout_width="@dimen/item_add_course_edittext_width"
        android:layout_height="@dimen/item_add_course_edittext_height"
        android:layout_below="@id/add_course_academic_year_underline"
        android:layout_toRightOf="@id/add_course_course_no_edittext"
        android:layout_alignTop="@id/add_course_course_code_edittext"
        android:hint="@string/add_course_section_number">
    </EditText>

    <ImageView
        android:layout_width="@dimen/item_add_course_plus_width"
        android:layout_height="@dimen/item_add_course_plus_height"
        android:src="@drawable/ic_action_new_dark"
        android:background="@color/add_course_add_icon_background"
        android:layout_alignTop="@id/add_course_section_no_edittext"
        android:layout_toRightOf="@id/add_course_section_no_edittext"
        android:layout_marginLeft="@dimen/item_add_course_plus_margin_left"/>

    <EditText
        android:id="@+id/add_course_course_name_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_add_course_course_name_edittext_margin_top"
        android:layout_below="@id/add_course_section_no_edittext"
        android:layout_alignLeft="@id/add_course_academic_year_underline"
        android:layout_alignRight="@id/add_course_academic_year_underline"
        android:hint="@string/add_course_course_name"/>

    <LinearLayout
        android:id="@+id/new_course_top_line"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="@dimen/item_add_course_line_height"
        android:background="@color/add_course_add_icon_background"
        android:layout_below="@+id/add_course_course_name_edittext"
        android:layout_marginTop="@dimen/item_add_course_top_layout_margin_top"
        android:layout_alignLeft="@id/add_course_course_name_edittext"
        android:layout_alignRight="@id/add_course_course_name_edittext">
        </LinearLayout>

    <RelativeLayout
        android:id="@+id/new_course_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_add_course_new_course_layout_height"
        android:layout_below="@id/new_course_top_line"
        android:layout_marginTop="@dimen/item_add_course_new_course_layout_margin_top"
        android:layout_alignRight="@id/add_course_course_name_edittext"
        android:layout_alignLeft="@id/add_course_course_name_edittext">

        <ImageView
            android:id="@+id/add_new_course_icon"
            android:layout_width="@dimen/item_add_course_plus_width"
            android:layout_height="@dimen/item_add_course_plus_height"
            android:src="@drawable/ic_action_new_dark"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/new_course_textview"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/add_new_course_icon"
            android:layout_alignTop="@id/add_new_course_icon"
            android:layout_height="wrap_content"
            android:textSize="@dimen/item_add_course_new_course_edittext_text_size"
            android:textColor="@color/add_course_add_icon_background_darker"
            android:text="@string/add_course_new_course_edittext"
            android:textStyle="italic"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/new_course_bottom_line"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="@dimen/item_add_course_line_height"
        android:background="@color/add_course_add_icon_background"
        android:layout_below="@id/new_course_layout"
        android:layout_marginTop="@dimen/item_add_course_bottom_line_margin_top"
        android:layout_alignLeft="@id/add_course_course_name_edittext"
        android:layout_alignRight="@id/add_course_course_name_edittext">
    </LinearLayout>

</RelativeLayout>