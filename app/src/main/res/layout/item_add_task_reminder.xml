<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:orientation="horizontal"
			  android:layout_width="match_parent"
			  android:layout_height="@dimen/reminder_item_height"
			  android:layout_marginLeft="@dimen/sub_line_margin_sides"
			  android:layout_marginRight="@dimen/sub_line_margin_sides"
			  android:background="@drawable/item_add_task_reminder">

	<Spinner
		android:id="@+id/spinner_reminder_date"
		android:layout_width="0dp"
		android:layout_weight="0.45"
		android:layout_height="match_parent"
		android:layout_margin="@dimen/reminder_spinner_margin"
		/>

	<Spinner
		android:id="@+id/spinner_reminder_type"
		android:layout_width="0dp"
		android:layout_weight="0.45"
		android:layout_height="match_parent"
		android:layout_margin="@dimen/reminder_spinner_margin"
		/>

	<ImageButton
		android:id="@+id/button_remove_reminder"
		android:layout_width="0dp"
		android:layout_weight="0.1"
		android:layout_height="match_parent"
		android:src="@drawable/ic_action_remove"
		android:layout_margin="@dimen/reminder_spinner_margin"
		style="?android:attr/buttonBarButtonStyle"
		/>


</LinearLayout>