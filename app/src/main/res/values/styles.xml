<resources>

    <!-- Base application theme. -->
    <style name="UltimateTheme" parent="android:Theme.Holo.Light.DarkActionBar">
		<item name="android:actionDropDownStyle">@style/DropDownNav.UltimateTheme</item>
		<item name="android:textViewStyle">@style/TextViewStyle.UltimateTheme</item>
		<item name="android:actionBarStyle">@style/ActionBar.UltimateTheme</item>
    </style>

	<style name="DropDownNav.Base.UltimateTheme" parent="@android:style/Widget.Holo.Light.Spinner">
		<item name="android:background">@drawable/spinner_background_ab_ultimate</item>
		<item name="android:popupBackground">@drawable/menu_dropdown_panel_ultimate</item>
		<item name="android:dropDownSelector">@drawable/selectable_background_ultimate</item>
	</style>

	<style name="DropDownNav.UltimateTheme" parent="DropDownNav.Base.UltimateTheme">

	</style>

	<style name="TextViewStyle.UltimateTheme" parent="android:Widget.TextView">

	</style>

	<style name="ActionBar.UltimateTheme" parent="android:Widget.ActionBar">
		<item name="android:background">@color/title_navigation_drawer</item>
		<item name="android:titleTextStyle">@style/ActionBar.TextAppearance.UltimateTheme</item>
	</style>
	<style name="ActionBar.Base.TextAppearance.UltimateTheme" parent="android:TextAppearance.Holo.Widget.ActionBar.Menu">
		<item name="android:textSize">18sp</item>
		<item name="android:textColor">#ffffff</item>
		<!--<item name="android:inputType">textCapWords</item>-->
		<item name="android:shadowColor">#999999</item>
		<item name="android:shadowRadius">1</item>
		<item name="android:shadowDx">1</item>
		<item name="android:shadowDy">1</item>
		<!--<item name="android:paddingLeft">30dp</item>-->
		<item name="android:layout_marginLeft">30dp</item>
	</style>

	<style name="ActionBar.TextAppearance.UltimateTheme" parent="@style/ActionBar.Base.TextAppearance.UltimateTheme">

	</style>

	<!-- styles for xml layouts -->

    <style name="navigation_drawer_outer_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
		<item name="android:background">@color/navigation_drawer_bg_default</item>
    </style>

	<style name="navigation_drawer_item_layout">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">@dimen/navigation_drawer_item_height</item>
		<item name="android:orientation">horizontal</item>
		<item name="android:background">@drawable/navigation_item_background</item>
		<item name="android:clickable">true</item>
	</style>

    <style name="navigation_drawer_item_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/navigation_drawer_item_height</item>
        <item name="android:paddingLeft">@dimen/navigation_drawer_item_text_padding_left</item>
        <item name="android:paddingTop">@dimen/navigation_drawer_item_padding_top</item>
        <item name="android:textSize">@dimen/navigation_drawer_item_text_size</item>
        <item name="android:textColor">@color/title_section_items_text_color</item>
		<item name="android:gravity">center_vertical</item>
    </style>

    <style name="navigation_drawer_item_indicator">
        <!--<item name="android:background">@drawable/navigation_item_background</item>-->
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">@dimen/navigation_drawer_item_height</item>
        <item name="android:clickable">true</item>
    </style>

	<style name="navigation_drawer_item_separator">
		<item name="android:layout_height">1dp</item>
		<item name="android:background">@color/navigation_drawer_item_separator</item>
	</style>

    <!-- styles for task items -->

    <style name="task_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/card_selector</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/task_item_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/task_item_margin_bottom</item>
        <item name="android:layout_marginLeft">@dimen/task_item_margin_left</item>
        <item name="android:layout_marginRight">@dimen/task_item_margin_right</item>
    </style>

	<style name="task_item_checkbox">
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">@dimen/task_item_title_size</item>
		<item name="android:textColor">@color/task_item_title_active</item>
	</style>

    <style name="task_item_checkbox_overdue_style" parent="@style/task_item_checkbox">
        <item name="android:textColor">@color/task_item_title_overdue</item>
    </style>

    <style name="task_item_checkbox_complete" parent="@style/task_item_checkbox">
        <item name="android:textColor">@color/task_item_title_complete</item>
    </style>

    <style name="task_item_checkbox_active" parent="@style/task_item_checkbox">
        <item name="android:textColor">@color/task_item_title_active</item>
    </style>

	<style name="task_item_description">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">14sp</item>
		<item name="android:layout_marginLeft">@dimen/task_item_description_margin_left</item>
		<item name="android:layout_marginRight">@dimen/task_item_description_margin_right</item>
	</style>

    <style name="task_item_description_overdue" parent="@style/task_item_description">

    </style>

    <style name="task_item_description_active" parent="@style/task_item_description">
    </style>

    <style name="task_item_description_complete" parent="@style/task_item_description">
    </style>

    <style name="task_item_tag">
        <item name="android:paddingRight">@dimen/task_item_tag_padding_right</item>
        <item name="android:paddingLeft">@dimen/task_item_tag_padding_left</item>
        <item name="android:paddingTop">@dimen/task_item_tag_padding_top</item>
        <item name="android:layout_marginRight">@dimen/task_item_tag_margin_right</item>
        <item name="android:textSize">@dimen/task_item_tag_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/task_item_tag_title_color1</item>
    </style>

	<style name="task_item_date">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:layout_marginBottom">@dimen/task_item_date_margin_bottom</item>
		<item name="android:paddingTop">@dimen/task_item_date_padding_top</item>
		<item name="android:textSize">@dimen/task_item_date_text_size</item>
	</style>

    <style name="task_item_date_active" parent="@style/task_item_date">
        <item name="android:textColor">@color/task_item_date_active</item>
    </style>

    <style name="task_item_date_overdue" parent="@style/task_item_date">
        <item name="android:textColor">@color/task_item_tag_color1</item>
    </style>

    <style name="task_item_date_complete" parent="@style/task_item_date">
        <item name="android:textColor">@color/task_item_title_complete</item>
    </style>

    <style name="alert_image">
        <item name="android:layout_width">@dimen/task_item_alert_width</item>
        <item name="android:layout_height">@dimen/task_item_alert_height</item>
        <item name="android:layout_marginLeft">@dimen/task_item_alert_margin_left</item>
        <item name="android:layout_marginBottom">@dimen/task_item_alert_margin_bottom</item>
        <item name="android:src">@drawable/ic_action_warning</item>
        <item name="android:visibility">visible</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="add_course_edittext">
        <item name="android:textSize">@dimen/item_add_course_edittext_text_size</item>
        <item name="android:textStyle">italic</item>
    </style>

	<style name="task_item_context_button">
		<item name="android:layout_width">@dimen/expand_button_width</item>
		<item name="android:layout_height">@dimen/expand_button_height</item>
		<item name="android:src">@drawable/ic_action_overflow_selector</item>
		<item name="android:layout_alignParentRight">true</item>
		<item name="android:layout_alignParentTop">true</item>
		<item name="android:layout_marginTop">@dimen/expand_button_margin_top</item>
		<item name="android:background">@android:color/transparent</item>
		<item name="android:clickable">true</item>
	</style>

</resources>
