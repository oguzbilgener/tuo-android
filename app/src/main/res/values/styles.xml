<resources>

    <!-- Base application theme. -->
    <style name="UltimateTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="navigation_drawer_outer_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
		<item name="android:background">@color/navigation_drawer_bg_default</item>
    </style>

	<style name="navigation_drawer_item_layout">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">@dimen/navigation_drawer_item_height</item>
		<item name="android:orientation">horizontal</item>
		<item name="android:background">@drawable/navigation_item_background</item>
		<item name="android:clickable">true</item>
	</style>

    <style name="navigation_drawer_item_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/navigation_drawer_item_height</item>
        <item name="android:paddingLeft">@dimen/navigation_drawer_item_text_padding_left</item>
        <item name="android:paddingTop">@dimen/navigation_drawer_item_padding_top</item>
        <item name="android:textSize">@dimen/navigation_drawer_item_text_size</item>
        <item name="android:textColor">@color/title_section_items_text_color</item>
		<item name="android:gravity">center_vertical</item>
    </style>

    <style name="navigation_drawer_item_indicator">
        <item name="android:background">@drawable/navigation_item_background</item>
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">@dimen/navigation_drawer_item_height</item>
        <item name="android:clickable">true</item>
    </style>

</resources>
